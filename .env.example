# Environment Configuration
# Copy this file to .env and fill in your actual values

# Site Configuration
SITE_URL=https://keykingslocksmithsc.com
PUBLIC_SITE_NAME="Key Kings Locksmith"
NODE_ENV=production

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
GOOGLE_RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Analytics (production only)
PUBLIC_GTM_CONTAINER_ID=GTM-XXXXXXX
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
PUBLIC_FB_PIXEL_ID=your_facebook_pixel_id

# Email Service (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
# Email address to send FROM (must be verified domain in Resend)
FROM_EMAIL=noreply@keykingslocksmithsc.com
# Email address to send notifications TO (business email)
TO_EMAIL=keykingslocksmithsc@gmail.com

# Business Contact Information
BUSINESS_PHONE=+18649009597
BUSINESS_EMAIL=keykingslocksmithsc@gmail.com
BUSINESS_ADDRESS="4105 Liberty Highway Unit B, Anderson, SC 29621"

# Other Tracking (optional)
MICROSOFT_CLARITY_ID=your_clarity_id

# Optional Services
VERCEL_BLOB_READ_WRITE_TOKEN=
DATABASE_URL=
REDIS_URL=

# Development Settings
DEBUG=false
LOG_LEVEL=info

# Security
SESSION_SECRET=your_session_secret_here_change_in_production
CORS_ORIGIN=https://keykingslocksmithsc.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CHAT=false
ENABLE_BLOG=true
ENABLE_BOOKING=true
