---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import ContactForm from '../components/forms/ContactForm.astro';
import { companyConfig, getPhoneLink, getEmailLink, getGoogleMapsLink } from '../data/company';

const title = `Contact Key Kings Locksmith | Anderson SC`;
const description = `Get in touch with Key Kings Locksmith in Anderson, SC. Questions about services, pricing, or scheduling? Call (864) 900-9597 or send us a message.`;
const keywords = ['contact locksmith', 'locksmith Anderson SC', 'emergency locksmith', 'locksmith phone number', 'locksmith near me', 'Anderson locksmith'];

const googleMapsApiKey = import.meta.env.GOOGLE_MAPS_API_KEY || import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
const mapEmbedUrl = `https://www.google.com/maps/embed/v1/place?key=${googleMapsApiKey}&q=${encodeURIComponent(companyConfig.contact.address.formatted)}`;
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-charcoal-900 via-charcoal-800 to-charcoal-900 text-white py-20 md:py-28 overflow-hidden">
      <!-- Animated Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 50px 50px;"></div>
      </div>

      <!-- Animated Glow Circles -->
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-gold-500 rounded-full blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-32 -left-32 w-80 h-80 bg-gold-400 rounded-full blur-3xl opacity-15 animate-pulse" style="animation-delay: 1.5s;"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gold-400/20 border border-gold-400/40 rounded-full text-gold-400 font-semibold mb-6 backdrop-blur-sm">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            Available When You Need Us
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight">
            Contact <span class="text-gold-400">Us</span>
          </h1>

          <p class="text-xl md:text-2xl text-white/90 mb-8 leading-relaxed max-w-3xl mx-auto">
            Questions about locksmith services, pricing, or availability? Call us directly or send a message below.
          </p>

          <!-- Quick Contact Buttons -->
          <div class="flex flex-wrap justify-center gap-4">
            <a href={getPhoneLink()}>
              <button class="px-8 py-4 bg-gold-500 hover:bg-gold-600 text-charcoal-900 font-bold rounded-xl shadow-xl shadow-gold-500/20 hover:shadow-2xl hover:scale-105 transition-all duration-300 flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
                Call: {companyConfig.contact.phone.display}
              </button>
            </a>
            <a href="/faq">
              <button class="px-8 py-4 border-2 border-white/30 text-white hover:bg-white/10 backdrop-blur-sm font-semibold rounded-xl hover:shadow-xl hover:scale-105 transition-all duration-300 flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                </svg>
                View FAQs
              </button>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 mb-16">
            <!-- Contact Information Cards -->
            <div class="space-y-6">
              <h2 class="text-3xl md:text-4xl font-bold text-charcoal-900 mb-8">How to Reach Us</h2>

              <!-- Phone Card -->
              <div class="bg-gradient-to-br from-gold-50 to-gold-100 p-6 rounded-2xl border-2 border-gold-200 hover:border-gold-400 hover:shadow-lg transition-all duration-200">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-gold-400 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-charcoal-900 mb-1">Phone</h3>
                    <a href={getPhoneLink()} class="text-xl text-gold-600 hover:text-gold-700 font-bold transition-colors">
                      {companyConfig.contact.phone.display}
                    </a>
                    <p class="text-sm text-charcoal-700 mt-2 font-medium">
                      Call for immediate help or to schedule service
                    </p>
                  </div>
                </div>
              </div>

              <!-- Email Card -->
              <div class="bg-gradient-to-br from-gold-50 to-gold-100 p-6 rounded-2xl border-2 border-gold-200 hover:border-gold-400 hover:shadow-lg transition-all duration-200">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-gold-400 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="font-bold text-charcoal-900 mb-1">Email</h3>
                    <a href={getEmailLink()} class="text-lg text-gold-600 hover:text-gold-700 break-all transition-colors">
                      {companyConfig.contact.email.primary}
                    </a>
                    <p class="text-sm text-charcoal-700 mt-2">
                      Non-urgent questions and service inquiries
                    </p>
                  </div>
                </div>
              </div>

              <!-- Visit Our Store Card -->
              <div class="bg-gradient-to-br from-gold-50 to-gold-100 p-6 rounded-2xl border-2 border-gold-200 hover:border-gold-400 hover:shadow-lg transition-all duration-200">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-gold-400 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-charcoal-900 mb-2">Visit Our Store</h3>
                    <address class="not-italic text-charcoal-700 font-medium mb-2">
                      {companyConfig.contact.address.street}<br>
                      {companyConfig.contact.address.city}, {companyConfig.contact.address.state} {companyConfig.contact.address.zipCode}
                    </address>
                    <p class="text-sm text-charcoal-600 mb-3">
                      Stop by for key duplication, lock hardware, or security consultations
                    </p>
                    <a
                      href={getGoogleMapsLink()}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-gold-600 hover:text-gold-700 inline-flex items-center gap-1 font-semibold hover:underline transition-colors"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                      </svg>
                      Get Directions
                    </a>
                  </div>
                </div>
              </div>

              <!-- Business Hours Card -->
              <div class="bg-gradient-to-br from-charcoal-900 to-charcoal-800 p-6 rounded-2xl">
                <h3 class="font-bold text-white mb-4 flex items-center gap-2 text-lg">
                  <svg class="w-6 h-6 text-gold-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                  </svg>
                  Business Hours
                </h3>
                <div class="space-y-2.5 text-sm">
                  <div class="flex justify-between text-white/90">
                    <span>Sunday:</span>
                    <span class="font-semibold text-gold-400">{companyConfig.hours.sunday.label}</span>
                  </div>
                  <div class="flex justify-between text-white/90">
                    <span>Monday:</span>
                    <span class="font-semibold text-gold-400">{companyConfig.hours.monday.label}</span>
                  </div>
                  <div class="flex justify-between text-white/90">
                    <span>Tuesday:</span>
                    <span class="font-semibold text-gold-400">{companyConfig.hours.tuesday.label}</span>
                  </div>
                  <div class="flex justify-between text-white/90">
                    <span>Wednesday:</span>
                    <span class="font-semibold text-gold-400">{companyConfig.hours.wednesday.label}</span>
                  </div>
                  <div class="flex justify-between text-white/90">
                    <span>Thursday:</span>
                    <span class="font-semibold text-gold-400">{companyConfig.hours.thursday.label}</span>
                  </div>
                  <div class="flex justify-between text-white/90">
                    <span>Friday:</span>
                    <span class="font-semibold text-gold-400">{companyConfig.hours.friday.label}</span>
                  </div>
                  <div class="flex justify-between text-white/90">
                    <span>Saturday:</span>
                    <span class="font-semibold text-gold-400">{companyConfig.hours.saturday.label}</span>
                  </div>
                </div>
              </div>

              <!-- Social Media -->
              <div>
                <h3 class="font-bold text-charcoal-900 mb-4 text-lg">Follow Us</h3>
                <div class="flex flex-wrap gap-3">
                  <a href={companyConfig.social.facebook} target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-gold-400 hover:bg-gold-500 rounded-lg flex items-center justify-center transition-all duration-200" aria-label="Facebook">
                    <svg class="w-6 h-6 text-charcoal-900" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                  </a>
                  <a href={companyConfig.social.instagram} target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-gold-400 hover:bg-gold-500 rounded-lg flex items-center justify-center transition-all duration-200" aria-label="Instagram">
                    <svg class="w-6 h-6 text-charcoal-900" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                  </a>
                  <a href={companyConfig.social.tiktok} target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-gold-400 hover:bg-gold-500 rounded-lg flex items-center justify-center transition-all duration-200" aria-label="TikTok">
                    <svg class="w-6 h-6 text-charcoal-900" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>
                  </a>
                  <a href={companyConfig.social.twitter} target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-gold-400 hover:bg-gold-500 rounded-lg flex items-center justify-center transition-all duration-200" aria-label="X (Twitter)">
                    <svg class="w-6 h-6 text-charcoal-900" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                  </a>
                  <a href={companyConfig.social.youtube} target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-gold-400 hover:bg-gold-500 rounded-lg flex items-center justify-center transition-all duration-200" aria-label="YouTube">
                    <svg class="w-6 h-6 text-charcoal-900" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                  </a>
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div>
              <div class="bg-gradient-to-br from-charcoal-50 to-charcoal-100 rounded-2xl shadow-2xl p-8 border-2 border-charcoal-200 sticky top-8">
                <ContactForm showTitle={true} />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
