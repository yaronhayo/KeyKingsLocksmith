const counties = [
  {
    name: 'Anderson County',
    description: 'Complete coverage throughout Anderson County including all cities, towns, and unincorporated areas.',
    cities: ['Anderson', 'Belton', 'Honea Path', 'Iva', 'Pelzer', 'Pendleton', 'Williamston', 'West Pelzer', 'Homeland Park', 'Northlake']
  },
  {
