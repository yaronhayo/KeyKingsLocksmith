---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Button from '../components/ui/Button.astro';
import TrustBadge from '../components/ui/TrustBadge.astro';
import ServiceAreaMap from '../components/sections/ServiceAreaMap.astro';
import { companyConfig, getPhoneLink } from '../data/company';

const title = `About Key Kings Locksmith | Anderson SC Since 2016`;
const description = `Trusted Anderson SC locksmith since 2016. Bonded, insured team serving residential, commercial & auto needs. Meet our professional locksmiths.`;
const keywords = ['about Key Kings', 'locksmith Anderson SC', 'bonded locksmith', 'insured locksmith', 'professional locksmith', 'Anderson locksmith'];
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-charcoal-900 via-charcoal-800 to-gold-900 text-white py-20 md:py-32 overflow-hidden">
      <!-- Diagonal Split Background -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-tr from-gold-600/20 via-transparent to-transparent"></div>
        <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 50px 50px;"></div>
      </div>

      <!-- Animated Glow Circles -->
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-gold-500 rounded-full blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-32 -left-32 w-80 h-80 bg-gold-400 rounded-full blur-3xl opacity-15 animate-pulse" style="animation-delay: 1.5s;"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-5xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Left Content -->
            <div>
              <!-- Badge -->
              <div class="inline-flex items-center gap-2 px-4 py-2 bg-gold-400/20 border border-gold-400/40 rounded-full text-gold-400 font-semibold mb-6 backdrop-blur-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
                Trusted Since {companyConfig.establishedYear}
              </div>

              <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight">
                About <span class="text-gold-400">{companyConfig.name}</span>
              </h1>

              <p class="text-xl md:text-2xl text-white/90 mb-8 leading-relaxed">
                The local locksmith team serving Upstate South Carolina since 2016—bringing professional security services to your home, business, and vehicle
              </p>

              <!-- Quick Contact -->
              <div class="flex flex-wrap gap-4">
                <a href={getPhoneLink()}>
                  <Button variant="primary" size="lg" class="bg-gold-500 hover:bg-gold-600 text-charcoal-900 hover:text-charcoal-900 shadow-xl shadow-gold-500/20">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                    </svg>
                    {companyConfig.contact.phone.display}
                  </Button>
                </a>
                <a href="/faq">
                  <Button variant="outline" size="lg" class="border-white/30 text-white hover:bg-white/10 backdrop-blur-sm">
                    Read FAQs
                  </Button>
                </a>
              </div>
            </div>

            <!-- Right Stats Grid -->
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 hover:bg-white/15 transition-all duration-300 hover:scale-105">
                <div class="text-4xl lg:text-5xl font-bold text-gold-400 mb-2">{companyConfig.credentials.yearsExperience}+</div>
                <div class="text-white/90 font-semibold text-sm lg:text-base">Years in Business</div>
              </div>

              <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 hover:bg-white/15 transition-all duration-300 hover:scale-105">
                <div class="text-4xl lg:text-5xl font-bold text-gold-400 mb-2">5K+</div>
                <div class="text-white/90 font-semibold text-sm lg:text-base">Customers Served</div>
              </div>

              <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 hover:bg-white/15 transition-all duration-300 hover:scale-105">
                <div class="text-4xl lg:text-5xl font-bold text-gold-400 mb-2">4.9★</div>
                <div class="text-white/90 font-semibold text-sm lg:text-base">Average Rating</div>
              </div>

              <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 hover:bg-white/15 transition-all duration-300 hover:scale-105">
                <div class="text-4xl lg:text-5xl font-bold text-gold-400 mb-2">$1M</div>
                <div class="text-white/90 font-semibold text-sm lg:text-base">Insurance Coverage</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Bottom Wave Decoration -->
      <div class="absolute bottom-0 left-0 right-0">
        <svg class="w-full h-12 md:h-16 fill-white" viewBox="0 0 1200 120" preserveAspectRatio="none">
          <path d="M0,60 C200,100 400,20 600,60 C800,100 1000,20 1200,60 L1200,120 L0,120 Z"></path>
        </svg>
      </div>
    </section>

    <!-- Our Story -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-6">How We Started</h2>
              <div class="prose prose-lg text-gray-700">
                <p class="mb-4">
                  Key Kings Locksmith opened in {companyConfig.establishedYear} with one van and a straightforward goal: provide honest locksmith service to Anderson County residents and businesses.
                </p>
                <p class="mb-4">
                  Nine years later, we're still that same locally-owned operation—just with more experience, better equipment, and thousands of satisfied customers across Anderson, Greenville, Clemson, and surrounding areas.
                </p>
                <p class="mb-4">
                  We handle everything from emergency lockouts to complete commercial security installations. Some days we're helping a parent get back into their car at the grocery store. Other days we're installing master key systems for office buildings. Every situation gets the same professional attention.
                </p>
                <p>
                  We're not a franchise or a national chain with a local number. When you call Key Kings, you're reaching people who live and work in the same communities we serve. That accountability matters to us.
                </p>
              </div>
            </div>
            <div class="bg-gradient-to-br from-gold-50 to-charcoal-50 rounded-lg p-8">
              <div class="space-y-6">
                <div class="text-center p-6 bg-white rounded-lg shadow-sm">
                  <div class="text-4xl font-bold text-gold-600 mb-2">{companyConfig.credentials.yearsExperience}+</div>
                  <div class="text-gray-700 font-semibold">Years in Business</div>
                </div>
                <div class="text-center p-6 bg-white rounded-lg shadow-sm">
                  <div class="text-4xl font-bold text-gold-600 mb-2">5,000+</div>
                  <div class="text-gray-700 font-semibold">Customers Served</div>
                </div>
                <div class="text-center p-6 bg-white rounded-lg shadow-sm">
                  <div class="text-4xl font-bold text-gold-600 mb-2">4.9/5</div>
                  <div class="text-gray-700 font-semibold">Average Rating</div>
                </div>
                <div class="text-center p-6 bg-white rounded-lg shadow-sm">
                  <div class="text-4xl font-bold text-gold-600 mb-2">$1M</div>
                  <div class="text-gray-700 font-semibold">Insurance Coverage</div>
