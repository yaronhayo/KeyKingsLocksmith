---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import ServicesGrid from '../components/sections/ServicesGrid.astro';
import Reviews from '../components/sections/Reviews.astro';
import FAQ from '../components/sections/FAQ.astro';
import { companyConfig } from '../data/company';

const title = `${companyConfig.name} - Professional Locksmith Services in Anderson, SC`;
const description = companyConfig.seo.defaultDescription;
---

<BaseLayout title={title} description={description}>
  <Header />

  <main>
    <!-- Hero Section with Booking Form -->
    <Hero showForm={true} urgency="asap" />

    <!-- Services Grid -->
    <ServicesGrid showAll={false} limit={6} featured={true} />

    <!-- Customer Reviews -->
    <Reviews limit={6} showRating={true} />

    <!-- FAQ Section -->
    <FAQ limit={8} />
  </main>

  <Footer />
</BaseLayout>
