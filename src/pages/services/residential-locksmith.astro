---

<BaseLayout title={title} description={description} keywords={keywords}>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-charcoal-900 via-charcoal-800 to-charcoal-900 text-white py-20 md:py-28 overflow-hidden">
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-gold-400 rounded-full blur-3xl opacity-10 animate-pulse"></div>
        <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-gold-500 rounded-full blur-3xl opacity-10 animate-pulse" style="animation-delay: 1s"></div>
      </div>

      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gold-400/10 border border-gold-400/30 rounded-full text-gold-400 text-sm font-semibold mb-6">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            Residential Locksmith Services
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6">
            Home Security Services in <span class="text-gold-400">Anderson SC</span>
          </h1>

          <p class="text-xl md:text-2xl text-white/90 mb-10 leading-relaxed">
            Lock rekeying for new homeowners, deadbolt installation, smart locks, lockout service, and complete home security solutions
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={getPhoneLink()}
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gold-400 text-charcoal-900 font-bold text-lg rounded-lg hover:bg-gold-500 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              Call (864) 900-9597
            </a>
            <a
              href="/contact"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 border-2 border-gold-400 text-gold-400 font-bold text-lg rounded-lg hover:bg-gold-400 hover:text-charcoal-900 transition-all"
            >
              Schedule Service
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Customer Situations Section -->
    <section class="relative py-20 bg-gradient-to-br from-white via-gold-50/30 to-white overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-[0.03]">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, #1a1a1a 1px, transparent 0); background-size: 32px 32px;"></div>
      </div>

      <!-- Decorative Elements -->
      <div class="absolute top-20 right-10 w-64 h-64 bg-gold-400 rounded-full blur-3xl opacity-[0.07]"></div>
      <div class="absolute bottom-20 left-10 w-64 h-64 bg-gold-500 rounded-full blur-3xl opacity-[0.07]"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-charcoal-900 mb-4">
              Which Describes <span class="text-gold-600">Your Situation?</span>
            </h2>
            <p class="text-lg md:text-xl text-charcoal-600 max-w-3xl mx-auto">
              We solve common home security challenges for homeowners throughout Anderson and Upstate SC
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {customerSituations.map((item) => (
              <div class="bg-gradient-to-br from-white to-gold-50/30 border-2 border-charcoal-200 rounded-2xl p-8 hover:border-gold-400 hover:shadow-xl transition-all duration-300 text-center">
                <div class="flex justify-center mb-6">
                  <div class="w-20 h-20 bg-gradient-to-br from-gold-400 to-gold-500 rounded-xl flex items-center justify-center shadow-lg">
                    <Fragment set:html={item.icon} />
                  </div>
                </div>

                <h3 class="text-xl font-bold text-charcoal-900 mb-4">{item.situation}</h3>

                <div class="mb-4 pb-4 border-b border-charcoal-200">
                  <div class="text-xs font-bold text-gold-600 uppercase tracking-wide mb-2">The Problem</div>
                  <p class="text-sm text-charcoal-700 leading-relaxed">{item.problem}</p>
                </div>

                <div class="mb-6">
                  <div class="text-xs font-bold text-gold-600 uppercase tracking-wide mb-2">The Solution</div>
                  <p class="text-lg font-bold text-charcoal-900 mb-3">{item.solution}</p>
                  <p class="text-sm text-charcoal-700 leading-relaxed">{item.description}</p>
                </div>

                <a
                  href={getPhoneLink()}
                  class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-gold-400 text-charcoal-900 font-semibold rounded-lg hover:bg-gold-600 hover:shadow-lg transition-all w-full"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                  </svg>
                  Get Help Now
                </a>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900 mb-4">
              Why Homeowners Choose <span class="text-gold-600">Key Kings Locksmith</span>
            </h2>
            <p class="text-lg text-charcoal-600 max-w-2xl mx-auto">
              Professional residential locksmith service for Anderson and Upstate SC
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {whyChooseUs.map((benefit) => (
              <div class="bg-gradient-to-br from-gold-50 to-white border-2 border-gold-200 rounded-xl p-8 hover:border-gold-400 hover:shadow-lg transition-all duration-300 text-center">
                <div class="flex justify-center mb-4">
                  <div class="w-16 h-16 bg-gold-400 rounded-xl flex items-center justify-center">
                    <Fragment set:html={benefit.icon} />
                  </div>
                </div>
                <h3 class="text-lg font-bold text-charcoal-900 mb-3">{benefit.title}</h3>
                <p class="text-sm text-charcoal-600 leading-relaxed">{benefit.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <FAQ category="residential" limit={6} />

    <!-- Reviews Section -->
    <Reviews category="residential" limit={8} />

    <!-- Final CTA Section -->
    <section class="py-16 md:py-20 bg-gradient-to-br from-charcoal-900 via-charcoal-800 to-charcoal-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-white mb-6">
            Ready to Secure Your <span class="text-gold-400">Home?</span>
          </h2>
          <p class="text-xl text-white/80 mb-10 leading-relaxed">
            Professional residential locksmith services throughout Anderson, Clemson, Greenville, and Upstate SC
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={getPhoneLink()}
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gold-400 text-charcoal-900 font-bold text-lg rounded-lg hover:bg-gold-500 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              Call (864) 900-9597
            </a>
            <a
              href="/contact"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 border-2 border-gold-400 text-gold-400 font-bold text-lg rounded-lg hover:bg-gold-400 hover:text-charcoal-900 transition-all"
            >
              Schedule Service
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <SchemaMarkup type="breadcrumb" data={breadcrumbData} />
  <SchemaMarkup type="service" data={{
    title: "Residential Locksmith Service",
    description: "Lock rekeying, deadbolt installation, smart locks, and home security.",
    serviceType: "Residential Locksmith",
    url: "https://keykingslocksmithsc.com/services/residential-locksmith"
  }} />
</BaseLayout>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.15;
    }
  }

  .animate-pulse {
    animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-pulse {
      animation: none !important;
      opacity: 0.1 !important;
    }
  }
</style>
