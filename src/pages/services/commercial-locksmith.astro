---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import FAQ from '../../components/sections/FAQ.astro';
import Reviews from '../../components/sections/Reviews.astro';
import SchemaMarkup from '../../components/seo/SchemaMarkup.astro';
import { companyConfig, getPhoneLink } from '../../data/company';

const title = `Commercial Locksmith Anderson SC | Business Security Solutions`;
