<script>
  // Reviews filtering and pagination functionality
  const REVIEWS_PER_PAGE = 12;
  let currentPage = 1;
  let currentRatingFilter = 'all';
  let currentPlatformFilter = 'all';

  // Get all review cards
  const allReviewCards = Array.from(document.querySelectorAll('.review-card'));
  
  // Get filter buttons and controls
  const filterButtons = document.querySelectorAll('.filter-btn');
  const platformSelect = document.getElementById('platform-filter') as HTMLSelectElement;
  const prevButton = document.getElementById('prev-page') as HTMLButtonElement;
  const nextButton = document.getElementById('next-page') as HTMLButtonElement;
  const currentPageSpan = document.getElementById('current-page');
  const totalPagesSpan = document.getElementById('total-pages');
  const noResultsDiv = document.getElementById('no-results');
  const reviewsGrid = document.getElementById('reviews-grid');

  // Filter reviews based on current filters
  function getFilteredReviews() {
    return allReviewCards.filter(card => {
      const rating = parseInt(card.getAttribute('data-rating') || '0');
      const platform = card.getAttribute('data-platform') || '';

      // Rating filter
      let ratingMatch = true;
      if (currentRatingFilter === '5') {
        ratingMatch = rating === 5;
      } else if (currentRatingFilter === '4') {
        ratingMatch = rating >= 4;
      }

      // Platform filter
      const platformMatch = currentPlatformFilter === 'all' || platform === currentPlatformFilter;

      return ratingMatch && platformMatch;
    });
  }

  // Display reviews for current page
  function displayReviews() {
    const filteredReviews = getFilteredReviews();
    const totalPages = Math.ceil(filteredReviews.length / REVIEWS_PER_PAGE);
    
    // Hide all reviews first
    allReviewCards.forEach(card => {
      card.classList.add('hidden');
    });

    // Show reviews for current page
    const startIndex = (currentPage - 1) * REVIEWS_PER_PAGE;
    const endIndex = startIndex + REVIEWS_PER_PAGE;
    const reviewsToShow = filteredReviews.slice(startIndex, endIndex);

    reviewsToShow.forEach(card => {
      card.classList.remove('hidden');
    });

    // Update pagination controls
    if (currentPageSpan) currentPageSpan.textContent = currentPage.toString();
    if (totalPagesSpan) totalPagesSpan.textContent = totalPages.toString();

    // Update button states
    if (prevButton) prevButton.disabled = currentPage === 1;
    if (nextButton) nextButton.disabled = currentPage >= totalPages || totalPages === 0;

    // Show/hide no results message
    if (filteredReviews.length === 0) {
      if (noResultsDiv) noResultsDiv.classList.remove('hidden');
      if (reviewsGrid) reviewsGrid.classList.add('hidden');
    } else {
      if (noResultsDiv) noResultsDiv.classList.add('hidden');
      if (reviewsGrid) reviewsGrid.classList.remove('hidden');
    }
  }

  // Handle rating filter button clicks
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Update active state
      filterButtons.forEach(btn => {
        btn.classList.remove('bg-gold-400', 'text-charcoal-900', 'border-gold-400');
        btn.classList.add('bg-white', 'text-charcoal-700', 'border-charcoal-200');
      });
      button.classList.remove('bg-white', 'text-charcoal-700', 'border-charcoal-200');
      button.classList.add('bg-gold-400', 'text-charcoal-900', 'border-gold-400');

      // Update filter and reset to page 1
      currentRatingFilter = button.getAttribute('data-filter') || 'all';
      currentPage = 1;
      displayReviews();
    });
  });

  // Handle platform filter change
  if (platformSelect) {
    platformSelect.addEventListener('change', () => {
      currentPlatformFilter = platformSelect.value;
      currentPage = 1;
      displayReviews();
    });
  }

  // Handle pagination buttons
  if (prevButton) {
    prevButton.addEventListener('click', () => {
      if (currentPage > 1) {
        currentPage--;
        displayReviews();
        // Scroll to reviews grid
        reviewsGrid?.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  }

  if (nextButton) {
    nextButton.addEventListener('click', () => {
      const filteredReviews = getFilteredReviews();
      const totalPages = Math.ceil(filteredReviews.length / REVIEWS_PER_PAGE);
      if (currentPage < totalPages) {
        currentPage++;
        displayReviews();
        // Scroll to reviews grid
        reviewsGrid?.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  }

  // Initial display
  displayReviews();
</script>

