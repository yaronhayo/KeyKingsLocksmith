---
// Facebook Pixel component for conversion tracking
export interface Props {
  pixelId?: string;
}

const { pixelId = import.meta.env.PUBLIC_FB_PIXEL_ID } = Astro.props;

// Only load pixel in production
const isProduction = import.meta.env.PROD;
---

{isProduction && pixelId && (
  <script define:vars={{ pixelId }}>
    !function(f,b,e,v,n,t,s)
    {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
    n.callMethod.apply(n,arguments):n.queue.push(arguments)};
    if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
    n.queue=[];t=b.createElement(e);t.async=!0;
    t.src=v;s=b.getElementsByTagName(e)[0];
    s.parentNode.insertBefore(t,s)}(window, document,'script',
    'https://connect.facebook.net/en_US/fbevents.js');
    fbq('init', pixelId);
    fbq('track', 'PageView');
  </script>
)}

{isProduction && pixelId && (
  <noscript>
    <img
      height="1"
      width="1"
      style="display:none"
      src={`https://www.facebook.com/tr?id=${pixelId}&ev=PageView&noscript=1`}
      alt=""
    />
  </noscript>
)}

<!--
Usage:
1. Add to BaseLayout.astro in the <head> section
2. Set environment variable: PUBLIC_FB_PIXEL_ID=XXXXXXXXXXXXXX
3. Pixel will only load in production builds

Track custom conversions:
<script>
  if (typeof fbq !== 'undefined') {
    fbq('track', 'Lead', {
      content_name: 'booking_form',
      value: 1.00,
      currency: 'USD'
    });
  }
</script>

Standard events you can track:
- Lead (form submissions)
- Contact (phone calls, emails)
- Schedule (appointment bookings)
- AddToCart (service selection)
- InitiateCheckout (booking started)
- Purchase (completed service)
-->
