---
// Google Analytics 4 component
export interface Props {
  measurementId?: string;
}

const { measurementId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID } = Astro.props;

// Only load analytics in production
const isProduction = import.meta.env.PROD;
---

{isProduction && measurementId && (
  <>
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${measurementId}`}></script>
    <script define:vars={{ measurementId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', measurementId, {
        page_path: window.location.pathname,
        anonymize_ip: true,
        cookie_flags: 'SameSite=None;Secure'
      });
    </script>
  </>
)}

<!--
Usage:
1. Add to BaseLayout.astro in the <head> section
2. Set environment variable: PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
3. Analytics will only load in production builds

Track custom events:
<script>
  if (typeof gtag !== 'undefined') {
    gtag('event', 'button_click', {
      event_category: 'engagement',
      event_label: 'Emergency CTA'
    });
  }
</script>
