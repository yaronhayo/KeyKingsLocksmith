---
import { Image } from 'astro:assets';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  width: number;
  height: number;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'high' | 'low' | 'auto';
  class?: string;
  sizes?: string;
  quality?: number;
  format?: 'avif' | 'webp' | 'jpeg' | 'png';
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  fetchpriority = 'auto',
  class: className = '',
  sizes,
  quality = 80,
  format = 'webp',
} = Astro.props;

// Generate responsive sizes if not provided
const defaultSizes = sizes || '(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw';
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  fetchpriority={fetchpriority}
  class={className}
  sizes={defaultSizes}
  quality={quality}
  format={format}
  decoding="async"
/>
