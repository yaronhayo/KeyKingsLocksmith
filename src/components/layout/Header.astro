---
import { companyConfig, getPhoneLink, getFormattedPhone } from '../../data/company';
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-gray-900">
          {companyConfig.name}
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a href="/" class="text-gray-700 hover:text-primary font-medium">Home</a>
        <a href="/services" class="text-gray-700 hover:text-primary font-medium">Services</a>
        <a href="/service-areas" class="text-gray-700 hover:text-primary font-medium">Service Areas</a>
        <a href="/about" class="text-gray-700 hover:text-primary font-medium">About</a>
        <a href="/contact" class="text-gray-700 hover:text-primary font-medium">Contact</a>
      </nav>

      <!-- CTA Button -->
      <div class="flex items-center space-x-4">
        <a
          href={getPhoneLink()}
          class="bg-primary text-white px-6 py-2 rounded-lg font-semibold hover:bg-red-700 transition-colors"
        >
          {getFormattedPhone()}
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .text-primary {
    color: var(--color-primary);
  }

  .bg-primary {
    background-color: var(--color-primary);
  }
</style>
