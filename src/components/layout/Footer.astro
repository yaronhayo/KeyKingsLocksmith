<style>
  /* Heartbeat animation */
  @keyframes heartbeat {
    0%, 100% {
      transform: scale(1);
    }
    10%, 30% {
      transform: scale(1.1);
    }
    20%, 40% {
      transform: scale(1.05);
    }
    50% {
      transform: scale(1.15);
    }
    60% {
      transform: scale(1);
    }
  }

  .heartbeat {
    display: inline-block;
    animation: heartbeat 2s ease-in-out infinite;
  }

  /* Custom hover effects for footer links */
  footer a {
    position: relative;
  }

  footer a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  footer a:hover::after {
    width: 100%;
  }

  /* Social media icon hover animation */
  footer a[aria-label*="Follow"] svg,
  footer a[aria-label*="Subscribe"] svg {
    transition: transform 0.2s ease;
  }

  footer a[aria-label*="Follow"]:hover svg,
  footer a[aria-label*="Subscribe"]:hover svg {
    transform: translateY(-2px);
  }

  /* Enhanced mobile layout */
  @media (max-width: 640px) {
    footer .grid {
      gap: 2.5rem;
    }

    footer h4 {
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      padding-bottom: 0.75rem;
    }
  }

  /* Smooth transitions for all interactive elements */
  footer a,
  footer svg {
    transition: all 0.2s ease-in-out;
  }

  /* Focus states for accessibility */
  footer a:focus-visible {
    outline: 2px solid #FBBF24;
    outline-offset: 4px;
    border-radius: 2px;
  }

  /* Hover effect for contact icons */
  footer a[aria-label*="Call"] svg,
  footer a[aria-label*="Email"] svg,
  footer a[aria-label*="View"] svg {
    transition: transform 0.2s ease, color 0.2s ease;
  }

  footer a[aria-label*="Call"]:hover svg,
  footer a[aria-label*="Email"]:hover svg,
  footer a[aria-label*="View"]:hover svg {
    transform: scale(1.1);
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .heartbeat {
      animation: none;
    }
  }
</style>
