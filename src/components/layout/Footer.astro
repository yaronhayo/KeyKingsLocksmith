          {companyConfig.social.youtube && (
            <a
              href={companyConfig.social.youtube}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-gold-400 transition-colors duration-200"
              aria-label="Subscribe on YouTube"
