        <p class="text-xs text-gray-400 mb-4">
          Trusted by 5,000+ customers
        </p>

        <!-- Social Media Links -->
        <div class="flex items-center gap-3 mt-6">
          {companyConfig.social.tiktok && (
            <a
              href={companyConfig.social.tiktok}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-gold-400 transition-colors duration-200"
              aria-label="Follow us on TikTok"
            >
              <Fragment set:html={socialIcons.tiktok} />
            </a>
          )}
          {companyConfig.social.facebook && (
            <a
              href={companyConfig.social.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-gold-400 transition-colors duration-200"
              aria-label="Follow us on Facebook"
            >
              <Fragment set:html={socialIcons.facebook} />
            </a>
          )}
          {companyConfig.social.instagram && (
            <a
              href={companyConfig.social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-gold-400 transition-colors duration-200"
              aria-label="Follow us on Instagram"
            >
              <Fragment set:html={socialIcons.instagram} />
            </a>
          )}
          {companyConfig.social.twitter && (
            <a
              href={companyConfig.social.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-gold-400 transition-colors duration-200"
              aria-label="Follow us on X (Twitter)"
