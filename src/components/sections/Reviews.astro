---
// Customer reviews section with social proof
import { getCollection } from 'astro:content';
import { companyConfig } from '../../data/company';

export interface Props {
  class?: string;
  limit?: number;
  showRating?: boolean;
}

const {
  class: className = '',
  limit = 6,
  showRating = true,
} = Astro.props;

// Fetch reviews from content collection
const allReviews = await getCollection('reviews');
const reviews = allReviews
  .filter(r => r.data.featured || true)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, limit);

const averageRating = companyConfig.content.reviews.averageRating;
const totalReviews = companyConfig.content.reviews.totalReviews;
---

<section class={`reviews-section py-16 bg-white ${className}`}>
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        What Our Customers Say
      </h2>
      <p class="text-lg text-gray-600 mb-6">
        Don't just take our word for it - hear from our satisfied customers
      </p>

      {showRating && (
        <div class="flex items-center justify-center gap-3 mb-4">
          <!-- Star Rating -->
          <div class="flex items-center gap-1">
            {[...Array(5)].map((_, i) => (
              <svg
                class={`w-6 h-6 ${i < Math.floor(averageRating) ? 'text-yellow-400' : 'text-gray-300'}`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          <span class="text-2xl font-bold text-gray-900">{averageRating}</span>
          <span class="text-gray-600">({totalReviews}+ reviews)</span>
        </div>
      )}
    </div>

    <!-- Reviews Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {reviews.map((review) => (
        <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <!-- Review Header -->
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <!-- Avatar -->
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center text-primary-700 font-bold text-lg flex-shrink-0">
                {review.data.name.charAt(0)}
              </div>
              <div>
                <h4 class="font-bold text-gray-900">{review.data.name}</h4>
                <p class="text-sm text-gray-600">{review.data.location}</p>
              </div>
            </div>
            {review.data.verified && (
              <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-50 text-blue-700 text-xs font-semibold rounded">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Verified
              </span>
            )}
          </div>

          <!-- Star Rating -->
          <div class="flex items-center gap-1 mb-3">
            {[...Array(5)].map((_, i) => (
              <svg
                class={`w-5 h-5 ${i < review.data.rating ? 'text-yellow-400' : 'text-gray-300'}`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>

          <!-- Service Type -->
          <p class="text-sm text-gray-500 mb-3">
            Service: <span class="font-semibold text-gray-700">{review.data.service}</span>
          </p>

          <!-- Review Content -->
          <div class="text-gray-700 leading-relaxed">
            {review.body}
          </div>

          <!-- Date -->
          <p class="text-xs text-gray-500 mt-4">
            {new Date(review.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </p>

          <!-- Platform Badge -->
          {review.data.platform && (
            <div class="mt-3 pt-3 border-t border-gray-100">
              <span class="inline-flex items-center gap-1 text-xs text-gray-600">
                Posted on
                <span class="font-semibold capitalize">{review.data.platform}</span>
              </span>
            </div>
          )}
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <p class="text-lg text-gray-700 mb-6">
        Ready to experience our top-rated service?
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="tel:+18649009597"
          class="inline-flex items-center gap-2 px-8 py-4 bg-primary-600 text-white font-bold rounded-lg hover:bg-primary-700 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          Call (864) 900-9597
        </a>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 px-8 py-4 border-2 border-primary-600 text-primary-600 font-bold rounded-lg hover:bg-primary-50 transition-colors"
        >
          Request Service
        </a>
      </div>
    </div>
  </div>
</section>
