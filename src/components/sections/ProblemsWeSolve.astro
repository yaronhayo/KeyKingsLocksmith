---
// Problems We Solve section - Urgency-driven, empathetic copy addressing pain points
import Card from '../ui/Card.astro';

export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const problems = [
  {
    id: 'car-lockout',
    icon: 'car',
    title: 'Locked Out of Your Car?',
    description: "Keys locked inside? Lost your only key? We understand the stress. Our automotive locksmith services get you back on the road without damage to your vehicle.",
    iconColor: 'text-trust-blue',
    borderColor: 'border-trust-blue',
  },
  {
    id: 'home-lockout',
    icon: 'home',
    title: 'Locked Out of Your Home?',
    description: "Standing outside your house with no way in? Don't panic. We provide fast, professional residential lockout services to get you back inside safely.",
    iconColor: 'text-trust-green',
    borderColor: 'border-trust-green',
  },
  {
    id: 'security-upgrade',
    icon: 'shield',
    title: 'Need Better Security?',
    description: "Worried about your home or business security? From lock rekeying after moving in to complete security system upgrades, we help you sleep better at night.",
    iconColor: 'text-gold-600',
    borderColor: 'border-gold-600',
  },
  {
    id: 'business-security',
    icon: 'building',
    title: 'Business Security Concerns?',
    description: "Protect your business, employees, and assets with professional commercial locksmith services. Master key systems, access control, and emergency exit devices.",
    iconColor: 'text-charcoal-700',
    borderColor: 'border-charcoal-600',
  },
];
---

<section class={`problems-section py-16 md:py-24 bg-charcoal-50 ${className}`}>
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-charcoal-900 mb-4">
        How Can We <span class="text-gold-600">Help You Today?</span>
      </h2>
      <p class="text-lg md:text-xl text-charcoal-600">
        Whatever your locksmith needs, we're here to solve your problem quickly and professionally
      </p>
    </div>

    <!-- Problems Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {problems.map((problem, index) => (
        <div 
          class="problem-card group"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <Card 
            variant="bordered" 
            padding="lg" 
            hover={true}
            class={`h-full border-2 ${problem.borderColor} hover:border-opacity-100 border-opacity-30 transition-all duration-300 hover:shadow-xl bg-white`}
          >
            <!-- Icon -->
            <div class={`mb-6 ${problem.iconColor} transform transition-transform duration-300 group-hover:scale-110`}>
              {problem.icon === 'car' && (
                <svg class="w-12 h-12 md:w-14 md:h-14" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z"/>
                </svg>
              )}
              {problem.icon === 'home' && (
                <svg class="w-12 h-12 md:w-14 md:h-14" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
                </svg>
              )}
              {problem.icon === 'shield' && (
                <svg class="w-12 h-12 md:w-14 md:h-14" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/>
                </svg>
              )}
              {problem.icon === 'building' && (
                <svg class="w-12 h-12 md:w-14 md:h-14" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"/>
                </svg>
              )}
            </div>

            <!-- Content -->
            <div class="space-y-3">
              <h3 class="text-xl md:text-2xl font-display font-bold text-charcoal-900 group-hover:text-gold-600 transition-colors duration-300">
                {problem.title}
              </h3>
              <p class="text-charcoal-600 leading-relaxed">
                {problem.description}
              </p>
            </div>

            <!-- Hover Indicator -->
            <div class="mt-6 flex items-center text-gold-600 font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <span class="text-sm">See Our Solutions</span>
              <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </Card>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-12 md:mt-16">
      <p class="text-lg text-charcoal-600 mb-6">
        Don't see your specific problem? We handle all locksmith needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="tel:+18649009597"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gold-600 text-white font-bold text-lg rounded-lg hover:bg-gold-700 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          <span>Call (864) 900-9597</span>
        </a>
        <a
          href="/services"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-transparent border-2 border-gold-600 text-gold-700 font-bold text-lg rounded-lg hover:bg-gold-600 hover:text-white transition-all"
        >
          <span>View All Services</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Entrance Animation */
  .problem-card {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 30px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  /* Card Hover Effect - GPU Accelerated */
  .problem-card {
    will-change: transform;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .problem-card {
      animation: none;
      opacity: 1;
      transform: none;
      will-change: auto;
    }

    .problem-card :global(.group-hover\:scale-110),
    .problem-card :global(.group-hover\:translate-x-1) {
      transform: none !important;
    }
  }
</style>
