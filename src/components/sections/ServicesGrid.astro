---
// Services grid showcase section
import { getCollection } from 'astro:content';
import Card from '../ui/Card.astro';
import Button from '../ui/Button.astro';

export interface Props {
  class?: string;
  showAll?: boolean;
  limit?: number;
  featured?: boolean;
}

const {
  class: className = '',
  showAll = false,
  limit = 6,
  featured = false,
} = Astro.props;

// Fetch services from content collection
const allServices = await getCollection('services');
let services = allServices.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

if (featured) {
  services = services.filter(s => s.data.featured);
}

if (!showAll) {
  services = services.slice(0, limit);
}
---

<section class={`services-grid-section py-16 bg-gray-50 ${className}`}>
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Our Locksmith Services
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Professional locksmith services for residential, commercial, and automotive needs throughout the Upstate SC region.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <Card variant="default" padding="lg" hover={true} clickable={true}>
          <a href={`/services/${service.slug}`} class="block h-full">
            <!-- Service Icon -->
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center text-2xl flex-shrink-0">
                {service.data.icon}
              </div>
              <h3 class="text-xl font-bold text-gray-900">{service.data.title}</h3>
            </div>

            <!-- Service Description -->
            <p class="text-gray-600 mb-4 line-clamp-3">
              {service.data.description}
            </p>

            <!-- Service Badge -->
            {service.data.featured && (
              <span class="inline-block px-3 py-1 bg-primary-100 text-primary-700 text-xs font-semibold rounded-full mb-4">
                Popular Service
              </span>
            )}

            <!-- Price & CTA -->
            <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-200">
              {service.data.price && (
                <span class="text-sm font-semibold text-gray-700">{service.data.price}</span>
              )}
              <span class="text-primary-600 font-semibold text-sm hover:text-primary-700 transition-colors flex items-center gap-1">
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </span>
            </div>
          </a>
        </Card>
      ))}
    </div>

    <!-- View All Button -->
    {!showAll && allServices.length > limit && (
      <div class="text-center mt-12">
        <Button href="/services" variant="primary" size="lg">
          View All Services
        </Button>
      </div>
    )}

    <!-- Emergency CTA -->
    <div class="mt-16 text-center p-8 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl text-white">
      <h3 class="text-2xl md:text-3xl font-bold mb-4">
        Need Emergency Locksmith Service?
      </h3>
      <p class="text-lg mb-6 text-white/90">
        We're available 24/7 for emergency lockouts and urgent situations
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="tel:+18649009597"
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-600 font-bold rounded-lg hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          Call (864) 900-9597
        </a>
        <Button href="/contact" variant="outline" size="lg" class="border-white text-white hover:bg-white/10">
          Request Service Online
        </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .services-grid-section a:hover h3 {
    color: var(--color-primary);
    transition: color 0.2s ease;
  }
</style>
