---
// Services grid showcase section with Key Kings branding
import { getCollection } from 'astro:content';
import Card from '../ui/Card.astro';
import Button from '../ui/Button.astro';

export interface Props {
  class?: string;
  showAll?: boolean;
  limit?: number;
  featured?: boolean;
}

const {
  class: className = '',
  showAll = false,
  limit = 6,
  featured = false,
} = Astro.props;

// Fetch services from content collection
const allServices = await getCollection('services');
let services = allServices.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

if (featured) {
  services = services.filter(s => s.data.featured);
}

if (!showAll) {
  services = services.slice(0, limit);
}

// Icon mapping for custom SVG icons
const iconMap: Record<string, string> = {
  'car': 'automotive',
  'home': 'residential',
  'building': 'commercial',
  'alert': 'emergency',
  'key': 'key-service',
  'lock': 'lock-service'
};
---

<section class={`services-grid-section py-16 md:py-20 bg-gradient-to-b from-white to-gray-50 ${className}`}>
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-charcoal-900 mb-4 font-display">
        Our Locksmith Services
      </h2>
      <p class="text-lg md:text-xl text-charcoal-600 max-w-3xl mx-auto">
        Professional locksmith services for residential, commercial, and automotive needs throughout Anderson and Upstate SC.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {services.map((service) => (
        <div class="service-card-wrapper group">
          <a href={`/services/${service.slug}`} class="block h-full">
            <div class="service-card h-full bg-white border-2 border-gray-200 rounded-xl p-6 md:p-8 transition-all duration-300 hover:border-gold-400 hover:shadow-2xl hover:-translate-y-1">
              <!-- Service Icon -->
              <div class="mb-6">
                <div class="w-16 h-16 bg-gradient-to-br from-gold-600 to-gold-700 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <!-- Custom SVG Icon Placeholder -->
                  <svg class="w-8 h-8 text-charcoal-900" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    {service.data.icon === 'car' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                    )}
                    {service.data.icon === 'home' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    )}
                    {service.data.icon === 'building' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    )}
                    {service.data.icon === 'alert' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    )}
                    {service.data.icon === 'key' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                    )}
                    {service.data.icon === 'lock' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    )}
                    {!['car', 'home', 'building', 'alert', 'key', 'lock'].includes(service.data.icon) && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    )}
                  </svg>
                </div>
              </div>

              <!-- Service Title -->
              <h3 class="text-xl md:text-2xl font-bold text-charcoal-900 mb-3 group-hover:text-gold-600 transition-colors duration-300 font-display">
                {service.data.title}
              </h3>

              <!-- Service Description -->
              <p class="text-charcoal-600 mb-6 line-clamp-3 leading-relaxed">
                {service.data.description}
              </p>

              <!-- Service Badge -->
              {service.data.featured && (
                <span class="inline-block px-3 py-1 bg-gold-50 text-gold-700 text-xs font-semibold rounded-full mb-4 border border-gold-600">
                  Popular Service
                </span>
              )}

              <!-- CTA -->
              <div class="flex items-center justify-between mt-auto pt-6 border-t border-gray-200">
                <span class="text-gold-700 font-bold text-sm group-hover:text-gold-800 transition-colors flex items-center gap-2">
                  View Service Details
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>

    <!-- View All Button -->
    {!showAll && allServices.length > limit && (
      <div class="text-center mt-12 md:mt-16">
        <Button href="/services" variant="primary" size="lg" class="bg-gold-600 hover:bg-gold-800 text-white font-bold shadow-lg hover:shadow-xl transition-all duration-300">
          View All Services
        </Button>
      </div>
    )}

    <!-- Emergency CTA -->
    <div class="mt-16 md:mt-20 text-center p-8 md:p-12 bg-gradient-to-br from-charcoal-800 via-charcoal-900 to-charcoal-800 rounded-2xl text-white shadow-2xl border border-gold-400/20">
      <h3 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 font-display">
        Need Locksmith Service?
      </h3>
      <p class="text-lg md:text-xl mb-8 text-gray-200 max-w-2xl mx-auto">
        Professional locksmith services available Sun-Thu 7am-10pm, Fri 6:30am-5:30pm throughout Anderson and Upstate SC
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="tel:+18649009597"
          class="inline-flex items-center gap-3 px-8 py-4 bg-gold-700 text-white font-bold rounded-lg hover:bg-gold-800 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          Call (864) 900-9597
        </a>
        <Button href="/book-service" variant="outline" size="lg" class="border-2 border-white text-white hover:bg-white hover:text-charcoal-900 transition-all duration-300">
          Request Service Online
        </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .service-card {
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #FBBF24, #F59E0B);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .service-card-wrapper:hover .service-card::before {
    transform: scaleX(1);
  }

  @media (prefers-reduced-motion: reduce) {
    .service-card,
    .service-card::before,
    .service-card-wrapper svg {
      transition: none;
    }
  }
</style>
