---
// Final Call-to-Action Section - Strong conversion-focused CTA with multiple contact options
import Button from '../ui/Button.astro';
import { companyConfig, getFormattedPhone, getPhoneLink, getCurrentBusinessHours } from '../../data/company';

export interface Props {
  variant?: 'default' | 'emergency' | 'gradient' | 'compact';
  showHours?: boolean;
  showServiceAreas?: boolean;
  class?: string;
}

const {
  variant = 'default',
  showHours = true,
  showServiceAreas = true,
  class: className = '',
} = Astro.props;

const backgroundStyles = {
  default: 'bg-charcoal-900 text-white',
  emergency: 'bg-gradient-to-br from-charcoal-800 to-charcoal-900 text-white',
  gradient: 'bg-gradient-to-br from-gold-500 via-gold-400 to-gold-600 text-charcoal-900',
  compact: 'bg-white text-charcoal-900',
};

const currentHours = getCurrentBusinessHours();
const primaryAreas = companyConfig.serviceAreas.primary.slice(0, 4).join(', ');
---

<section class={`py-16 md:py-20 ${backgroundStyles[variant]} ${className}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Main Headline -->
      <h2 class="text-3xl md:text-5xl font-bold mb-4 md:mb-6">
        Ready to Get Started?
      </h2>

      <!-- Subheadline -->
      <p class={`text-lg md:text-xl mb-8 md:mb-10 ${variant === 'gradient' || variant === 'compact' ? 'text-charcoal-700' : 'text-white/95'}`}>
        Whether you have questions about our services, need a security consultation, or require immediate help—we're here. Licensed, bonded, and insured professionals serving Anderson and Upstate South Carolina.
      </p>

      <!-- Primary CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-10">
        <a
          href={getPhoneLink()}
          class="inline-flex items-center justify-center gap-3 px-8 py-4 text-lg font-bold rounded-lg transition-all duration-200 bg-gold-700 text-white hover:bg-gold-800 hover:text-white hover:scale-105 shadow-lg hover:shadow-xl w-full sm:w-auto"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          <span>Call {getFormattedPhone()}</span>
        </a>
        
        <a
          href="/book-service"
          class={`inline-flex items-center justify-center gap-3 px-8 py-4 text-lg font-bold rounded-lg transition-all duration-200 border-2 hover:scale-105 shadow-lg hover:shadow-xl w-full sm:w-auto ${
            variant === 'gradient'
              ? 'border-charcoal-900 text-charcoal-900 hover:bg-charcoal-900 hover:text-white'
              : 'border-white text-white hover:bg-white hover:text-charcoal-900 hover:border-white'
          }`}
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>Book Service Online</span>
        </a>
      </div>

      <!-- Business Hours -->
      {showHours && (
        <div class={`mb-8 pb-8 border-b ${variant === 'gradient' || variant === 'compact' ? 'border-charcoal-300' : 'border-gray-700'}`}>
          <div class="flex flex-col md:flex-row items-center justify-center gap-6 text-base md:text-lg">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-semibold">Business Hours:</span>
            </div>
            <div class={variant === 'gradient' || variant === 'compact' ? 'text-charcoal-700' : 'text-gray-300'}>
              <div class="font-medium">Monday - Sunday: 8:00 AM - 8:00 PM</div>
            </div>
          </div>
          <div class={`mt-3 flex items-center justify-center gap-2 text-sm ${variant === 'compact' ? 'text-charcoal-600' : 'text-gray-400'}`}>
            <span>For after-hours emergencies, call our main line</span>
          </div>
        </div>
      )}

      <!-- Contact Options Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Phone -->
        <a
          href={getPhoneLink()}
          class={`flex flex-col items-center p-6 rounded-lg transition-all duration-200 ${
            variant === 'gradient' || variant === 'compact'
              ? 'bg-charcoal-50 hover:bg-charcoal-100'
              : 'bg-white/10 hover:bg-white/20'
          }`}
        >
          <svg class="w-10 h-10 mb-3 text-gold-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          <div class="font-bold text-lg mb-1 text-gold-400">Call Us</div>
          <div class={`text-sm ${variant === 'gradient' || variant === 'compact' ? 'text-charcoal-700' : 'text-gray-400'}`}>
            {getFormattedPhone()}
          </div>
        </a>

        <!-- Email -->
        <a
          href={`mailto:${companyConfig.contact.email.primary}`}
          class={`flex flex-col items-center p-6 rounded-lg transition-all duration-200 ${
            variant === 'gradient' || variant === 'compact'
              ? 'bg-charcoal-50 hover:bg-charcoal-100'
              : 'bg-white/10 hover:bg-white/20'
          }`}
        >
          <svg class="w-10 h-10 mb-3 text-gold-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          <div class="font-bold text-lg mb-1 text-gold-400">Email Us</div>
          <div class={`text-sm ${variant === 'gradient' || variant === 'compact' ? 'text-charcoal-700' : 'text-gray-400'} break-all`}>
            {companyConfig.contact.email.primary}
          </div>
        </a>

        <!-- Location -->
        <a
          href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(companyConfig.contact.address.formatted)}`}
          target="_blank"
          rel="noopener noreferrer"
          class={`flex flex-col items-center p-6 rounded-lg transition-all duration-200 ${
            variant === 'gradient' || variant === 'compact'
              ? 'bg-charcoal-50 hover:bg-charcoal-100'
              : 'bg-white/10 hover:bg-white/20'
          }`}
        >
          <svg class="w-10 h-10 mb-3 text-gold-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
          <div class="font-bold text-lg mb-1 text-gold-400">Visit Us</div>
          <div class={`text-sm ${variant === 'gradient' || variant === 'compact' ? 'text-charcoal-700' : 'text-gray-400'} text-center`}>
            {companyConfig.contact.address.city}, {companyConfig.contact.address.state}
          </div>
        </a>
      </div>

      <!-- Service Areas -->
      {showServiceAreas && (
        <div class={`text-center ${variant === 'gradient' || variant === 'compact' ? 'text-charcoal-700' : 'text-gray-400'}`}>
          <p class="text-sm md:text-base mb-2">
            <span class="font-semibold">Proudly Serving:</span>
          </p>
          <p class="text-sm md:text-base">
            Anderson • Greenville • Clemson • Easley • Seneca • Pickens • Liberty • Williamston • Pendleton • Belton • Honea Path • Pelzer
          </p>
        </div>
      )}
    </div>
  </div>
</section>
